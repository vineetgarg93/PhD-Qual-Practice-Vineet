
%html{:lang => "en"}
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{:charset => "utf-8"}/
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}/
    %title Flash Cards: Home
    / Latest compiled and minified CSS
    %link{:href => "https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css", :rel => "stylesheet"}/
    %link{:href => "css/sticky-footer.css", :rel => "stylesheet"}/
    %link{:href => "css/styles.css", :rel => "stylesheet"}/
    / jQuery library
    %script{:src => "https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"}
    / Popper JS
    %script{:src => "https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"}
    / Latest compiled JavaScript
    %script{:src => "https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"}
    / Latest compiled JavaScript
    %script{:src => "script/main.js"}
  %body
    %nav.navbar.navbar-expand-md.bg-dark.navbar-dark
      %a.navbar-brand{:href => "#"} PhD Flash Cards
      %button.navbar-toggler{"data-target" => ".dual-collapse2", "data-toggle" => "collapse", :type => "button"}
        %span.navbar-toggler-icon
      .collapse.navbar-collapse.w-100.order-1.order-md-0.dual-collapse2
        %ul.navbar-nav.mr-auto
          %li.nav-item.active
            %a.nav-link{:href => "#"}
              Home
              %span.sr-only (current)
          %li.nav-item
            %a.nav-link{:href => "#"} Quizes
          %li.nav-item
            %a.nav-link{:href => "#"} About
      .navbar-collapse.collapse.w-100.order-3.dual-collapse2
        %ul.navbar-nav.ml-auto
          %li.nav-item
            %a.nav-link{:href => "{{ url('/login') }}"} Login
          %li.nav-item
            %a.nav-link{:href => "{{ url('/register') }}"} Register
    %br/
    .container
      %article.jumbotron.mx-auto
        - @questions.each do |ques|
          .questionItem.visible{"data-answer" => "2"}
            .row
              %h3= ques.question
            .row
              .choices
                .radio
                  %label
                    %input{:name => "optradio", :type => "radio"}/
                    %font{:size => "4.5"}=  ques.option1
                .radio
                  %label
                    %input{:name => "optradio", :type => "radio"}/
                    %font{:size => "4.5"}=  ques.option2
                .radio
                  %label
                    %input{:name => "optradio", :type => "radio"}/
                    %font{:size => "4.5"}=  ques.option3
                .radio
                  %label
                    %input{:name => "optradio", :type => "radio"}/
                    %font{:size => "4.5"}=  ques.option4
                .radio
                  %label
                    %input{:name => "optradio", :type => "radio"}/
                    %font{:size => "4.5"}=  ques.option5
          .row
            .col-xs-12.mx-auto
              %button.btn.btn-primary{:onclick => "showAnswer()", :type => "button"} Show Answer
        %br/
        .row
          .col-xs-6
            .previous
              %button.btn.previous{:onclick => "getPrevious()", :type => "button"}
                Previous
          .col-xs-6.ml-auto
            .next
              %button.btn.next{:onclick => "getNext()", :type => "button"}
                Next
      .row
        .col-xs-12.mx-auto
          %input.btn.btn-info{:type => "submit", :value => "Submit"}/
    %br/
    %footer.footer.bg-dark
      .container
        %span.text-muted Created by Team RubyGeeks
